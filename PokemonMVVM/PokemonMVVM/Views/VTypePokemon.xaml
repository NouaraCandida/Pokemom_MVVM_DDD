<?xml version="1.0" encoding="utf-8" ?>
<views:MvxContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokemonMVVM.Views.VTypePokemon"
             xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
             xmlns:mvx="clr-namespace:MvvmCross.Forms.Bindings;assembly=MvvmCross.Forms"
             xmlns:viewModels="clr-namespace:PokemonMVVM.Core.ViewModels;assembly=PokemonMVVM.Core" 
             xmlns:behavior="clr-namespace:PokemonMVVM.Behaviors"
             x:TypeArguments="viewModels:VMTypePokemon"
             NavigationPage.HasNavigationBar="False">


    <ContentPage.Content>
        <Grid BackgroundColor="DarkRed">
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="20" />
                <RowDefinition Height="22" />
                <RowDefinition Height="22" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <StackLayout BackgroundColor="DarkRed"
                         Padding="10,25,10,10"
                         Grid.Row="0">
                <Image Source="logo"
                       HorizontalOptions="Center"
                       Aspect="AspectFit"
                       HeightRequest="50"
                       Margin="5" />
            </StackLayout>
            <StackLayout BackgroundColor="DarkRed"
                             Grid.Row="1"
                             VerticalOptions="FillAndExpand"/>
            <Frame CornerRadius="30"
                       BackgroundColor="White"
                       HasShadow="False"
                       HeightRequest="40"
                       VerticalOptions="End"
                       Grid.Row="1"
                       Grid.RowSpan="3"/>
            <StackLayout BackgroundColor="White"
                             VerticalOptions="FillAndExpand"
                             Padding="8,0,8,3"
                             Grid.Row="2"
                             Grid.RowSpan="3">
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="EndAndExpand">
                    <Label
                        Grid.Column="1"
                        Grid.Row="0"
                        FontSize="14"
                        HorizontalOptions="Start"
                        HorizontalTextAlignment="Start"
                        VerticalOptions="Center" 
                        VerticalTextAlignment="Center"
                        TextColor="#7D7D7D"                        
                        FontAttributes="Bold"
                         mvx:Bi.nd="Text NameFilter" />
                    <Button 
                        Text="Filter" 
                        TextColor="#7D7D7D"
                        BackgroundColor="Transparent"
                        HorizontalOptions="End"
                        Command="{mvx:MvxBind FilterTypeCommand}"/>
                    <Button 
                        Text="All"
                        TextColor="#7D7D7D"
                        HorizontalOptions="End"
                        BackgroundColor ="Transparent"
                        Command="{mvx:MvxBind AllFilterTypeCommand}"/>
                </StackLayout>


                <views:MvxListView 
                        HorizontalOptions="FillAndExpand" 
                        VerticalOptions="FillAndExpand"
                        SelectionMode="None"
                        ItemsSource="{mvx:MvxBind Pokemons}" 
                        ItemClick="{mvx:MvxBind PokemonSelectedCommand}"
                        IsPullToRefreshEnabled="True"
                        RefreshCommand="{mvx:MvxBind RefreshPokemonCommand}"
                        BackgroundColor="Transparent"
                        RowHeight="100"
                        SeparatorVisibility="None">
                    <ListView.Behaviors>
                    <behavior:InfiniteScroll LoadMoreCommand="{Binding FetchPokemonCommand}" />
                </ListView.Behaviors>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <views:MvxViewCell>
                            <StackLayout
                                Orientation="Vertical">
                                    <Grid >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="2*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackLayout  
                                        Grid.Column="0"
                                        Grid.Row="0">
                                        <Frame 
                                            CornerRadius="100" 
                                            HeightRequest="100"
                                            WidthRequest="100"
                                            HorizontalOptions="Center"
                                            Padding="0"
                                            BackgroundColor="Transparent"
                                            BorderColor="DarkRed"
                                            IsClippedToBounds="True">
                                            <Image mvx:Bi.nd="Source UrlImage"
                                                   HorizontalOptions="Center"
                                                   VerticalOptions="Center"
                                                   HeightRequest="60"
                                                   Aspect="AspectFit"/>
                                        </Frame>
                                    </StackLayout>
                                    <Label
                                        Grid.Column="1"
                                        Grid.Row="0"
                                        FontSize="Medium"
                                        Margin="10,0,0,0"
                                        HorizontalOptions="Start"
                                        HorizontalTextAlignment="Start"
                                        VerticalOptions="Center" 
                                        VerticalTextAlignment="Center"
                                        TextColor="Black"
                                        FontAttributes="Bold"
                                        mvx:Bi.nd="Text Name" />
                                           
                                </Grid>
                                
                                <BoxView
                                    HeightRequest="1"
                                    Color="White" />
                            </StackLayout>
                        </views:MvxViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </views:MvxListView>
                     </StackLayout>
        </Grid>
    </ContentPage.Content>
</views:MvxContentPage>